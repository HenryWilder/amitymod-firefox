---
import type { InputProps } from "@/scripts/shared";
import "@/styles/input.scss";

interface Props extends InputProps {
    type: "checkbox" | "radio";
    name?: string;
}

const { id, label, name, type } = Astro.props;
---
<label>
    <input id={id} type={type} name={name}/>
    {label}
</label>
