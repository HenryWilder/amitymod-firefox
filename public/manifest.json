{
    "manifest_version": 3,
    "name": "Amity Mod",
    "version": "0.1",

    "description": "I thought it'd be neat",
    "homepage_url": "https://github.com/HenryWilder/amitymod-firefox",
    "icons": {
        "512": "icons/goop-512.png"
    },

    "browser_specific_settings": {
        "gecko": {
            "id": "amitymod@amysmilebatto.com"
        }
    },

    "permissions": [
        "activeTab",
        "tabs",
        "storage",
        "scripting"
    ],

    "action": {
        "default_icon": {
            "512": "icons/goop-512.png"
        },
        "default_title": "Amity Mod",
        "default_popup": "popup.html"
    },

    "web_accessible_resources": [
        {
            "resources": ["styles/vars.css"],
            "matches": ["*://developer.mozilla.org/*"]
        },
        {
            "resources": ["content-styles/developer.mozilla.css"],
            "matches": ["*://developer.mozilla.org/*"]
        }
    ],

    "host_permissions": [
        "*://developer.mozilla.org/*"
    ],

    "background": {
        "scripts": ["scripts/background.js"]
    }
}
