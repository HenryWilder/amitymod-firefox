{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "astro/tsconfigs/strict",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/components/*": ["src/components/*"],
            "@/pages/*": ["src/pages/*"],
            "@/scripts/*": ["src/scripts/*"],
            "@/styles/*": ["src/styles/*"],
            "@/typescript/*": ["src/typescript/*"],
            "@/public/*": ["public/*"]
        },
        "types": ["firefox-webext-browser", "babel"],
        "skipLibCheck": true
    }
}
