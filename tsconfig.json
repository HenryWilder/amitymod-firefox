{
    "extends": "astro/tsconfigs/strict",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/components/*": ["src/components/*"],
            "@/pages/*": ["src/pages/*"],
            "@/scripts/*": ["src/scripts/*"],
            "@/styles/*": ["src/styles/*"],
            "@/public/*": ["public/*"]
        },
        "types": ["firefox-webext-browser"]
    }
}
